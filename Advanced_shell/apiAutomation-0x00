#!/bin/bash

# API endpoint for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request and handle response
curl -s "$API_URL" -o "$OUTPUT_FILE" 2>> "$ERROR_FILE"

# Check if request was successful
if [ $? -eq 0 ]; then
    # Verify the response contains valid JSON
    if jq empty "$OUTPUT_FILE" 2>> "$ERROR_FILE"; then
        echo "API request successful. Data saved to $OUTPUT_FILE"
    else
        echo "Error: Invalid JSON response" >> "$ERROR_FILE"
        rm -f "$OUTPUT_FILE"  # Remove invalid file
    fi
else
    echo "Error: Failed to fetch data from API" >> "$ERROR_FILE"
fi