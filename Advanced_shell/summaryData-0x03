#!/bin/bash

# Output CSV file
report_file="pokemon_report.csv"
echo "Name,Height (m),Weight (kg)" > "$report_file"

# Process each PokÃ©mon JSON file and generate CSV
for file in pokemon_data/*.json; do
    jq -r '"\(.name),\(.height/10),\(.weight/10)"' "$file" >> "$report_file"
done

# Calculate averages using awk
averages=$(awk -F, '
NR > 1 {
    height_sum += $2
    weight_sum += $3
    count++
} 
END {
    printf "%.2f %.2f", height_sum/count, weight_sum/count
}' "$report_file")

# Format output with sed
echo "CSV Report generated at: $report_file"
echo
cat "$report_file"
echo
echo "$averages" | awk '{print "Average Height: " $1 " m\nAverage Weight: " $2 " kg"}' |
sed 's/^/ /'