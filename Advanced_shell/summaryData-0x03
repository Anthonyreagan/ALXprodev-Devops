#!/bin/bash

# Output CSV file
report_file="pokemon_report.csv"
echo "Name,Height (m),Weight (kg)" > "$report_file"

# Initialize totals for averages
total_height=0
total_weight=0
count=0

# Process each PokÃ©mon JSON file
for file in pokemon_data/*.json; do
    # Extract data using jq
    name=$(jq -r '.name' "$file")
    height=$(jq -r '.height/10' "$file")
    weight=$(jq -r '.weight/10' "$file")
    
    # Add to CSV
    echo "$name,$height,$weight" >> "$report_file"
    
    # Accumulate for averages
    total_height=$(echo "$total_height + $height" | bc)
    total_weight=$(echo "$total_weight + $weight" | bc)
    count=$((count + 1))
done

# Calculate averages
avg_height=$(echo "scale=2; $total_height/$count" | bc)
avg_weight=$(echo "scale=2; $total_weight/$count" | bc)

# Print results
echo "CSV Report generated at: $report_file"
echo
cat "$report_file"
echo
echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"