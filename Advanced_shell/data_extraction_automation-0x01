#!/bin/bash

# Extract data using jq and format with awk/sed
jq -r '. | "\(.name) \(.types[0].type.name) \(.weight) \(.height)"' data.json |
awk '{
    name = $1
    type = $2
    weight = $3/10
    height = $4/10
    printf "%s is of type %s, weighs %dkg, and is %.1fm tall.\n", name, type, weight, height
}' |
sed 's/^./\U&/'